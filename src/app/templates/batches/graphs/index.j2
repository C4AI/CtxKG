{% extends "base.j2" %}

{% block content %}
<div class="mt-12 mx-12">
    {{ breadcrums(
        ["home.index", "Home"],
        ["batches.index", "Batches", {"language": language}],
        ["batches.batch", batch, {"language": language, "batch": batch}],
        title
    )}}
    <h1 class="text-4xl font-semibold mt-3">{{ title }}</h1>
</div>
<ul class="mt-5 overflow-auto">
    {% for graph in graphs %}
    <a href="{{ url_for('.graph', language=language, batch=batch, version=version, graph=graph.name) }}" class="text-decoration-none">
        <li class="border-b p-5 hover:text-blue-500">{{ graph.stem }}</li>
    </a>
    {% endfor %}
</ul>
{% endblock %}
