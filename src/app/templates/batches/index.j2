{% extends "base.j2" %}

{% block styles %}
<link rel="stylesheet" href="{{ url_for('static', filename='languages/batches/index.css') }}">
{% endblock %}

{% block content %}
<div class="mt-12 mx-12">
    {{ breadcrums(["home.index", "Home"], "Batches") }}
    <div class="flex justify-between items-center">
        <h1 class="text-4xl font-semibold mt-3">Batches</h1>
        <div>
            <a href="{{ url_for('.new', language=language) }}" class="bg-blue-400 hover:bg-blue-900 text-white font-bold py-3 pl-3 pr-2 rounded">
                <span>New</span>
                <span class="mx-2"><i class="fas fa-plus-circle"></i></span>
            </a>
        </div>
    </div>
</div>
<ul class="mt-5 overflow-auto">
    {% for batch in batches %}
    <li class="border-t p-5 flex justify-between">
        <a href="{{ url_for('.batch', language=language, batch=batch.name) }}" class="text-decoration-none hover:text-blue-500 flex-grow">
            {{ batch.name }}
        </a>
        <div class="ml-4 flex justify-between">
            {% include "batches/_batch_status_bar.j2" %}
            <a href="{{ url_for('.delete', language=language, batch=batch.name) }}">
                <i class="fas fa-trash text-blue-400 hover:text-blue-900"></i>
            </a>
        </div>
    </li>
    {% endfor %}
</ul>
{% endblock %}