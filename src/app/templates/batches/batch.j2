{% extends "base.j2" %}

{% block content %}
<div class="mt-12 mx-12">
    {{ breadcrums(
        ["home.index", "Home"],
        [".index", "Batches", {"language": language}],
        batch
    ) }}
    <h1 class="text-4xl font-semibold mt-3">{{ batch }}</h1>
</div>
<div class="flex items-stretch mt-12 overflow-hidden">
    <div class="flex-grow flex flex-col">
        <a href="{{ url_for('.graphs.index', language=language, batch=batch, version='base') }}">
            <div class="p-5 bg-blue-900">
                <h1 class="text-white text-3xl text-center mb-3">Base</h1>
                <p class="text-white text-center">Graphs generated by the algorithm, with the synonyms still remaining.</p>
            </div>
        </a>
        <ul class="overflow-auto">
            {% for graph in base_graphs %}
            <a href="{{ url_for('.graphs.graph', language=language, batch=batch, version='base', graph=graph.name) }}" class="text-decoration-none"><li class="border-b p-5 hover:text-blue-500">{{ graph.stem }}</li></a>
            {% endfor %}
        </ul>
    </div>
    <div class="border"></div>
    <div class="flex-grow flex flex-col">
        <a href="{{ url_for('.graphs.index', language=language, batch=batch, version='clean') }}">
            <div class="p-5 bg-blue-400">
                <h1 class="text-white text-3xl text-center mb-3">Clean</h1>
                <p class="text-white text-center">Gaphs with synonyms reduced to just the most recurring one.</p>
            </div>
        </a>
        <ul class="overflow-auto">
            {% for graph in clean_graphs %}
            <a href="{{ url_for('.graphs.graph', language=language, batch=batch, version='clean', graph=graph.name) }}" class="text-decoration-none"><li class="border-b p-5 hover:text-blue-500">{{ graph.stem }}</li></a>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}