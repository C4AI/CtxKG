{% from "macros/collapsable.j2" import collapsable %}
{% from "macros/breadcrums.j2" import breadcrums %}
{% from "macros/link.j2" import link %}
{% from "macros/render_field.j2" import render_field %}

<!DOCTYPE html>
<html lang="en">
<head>
    {% block head %}
    <link rel="stylesheet" href="{{ url_for('static', filename='tailwind.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='header.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='footer.css') }}">
    {% block styles %}{% endblock %}
    {% block scripts %}{% endblock %}
    <title>{% block title %}PIR√Å KG{% endblock %}</title>
    {% endblock %}
    <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" data-auto-replace-svg="nest"></script>
</head>
<body>
    {% block body %}
    <div id="header">{% block header %}{% include "header.j2" %}{% endblock %}</div>
    <div id="content" class="flex-grow flex flex-col overflow-hidden">{% block content %}{% endblock %}</div>
    <div id="footer">{% block footer %}{% endblock %}</div>
    {% endblock %}
    {% block postscripts %}{% endblock %}
</body>
</html>