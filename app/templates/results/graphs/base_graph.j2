{% extends "base.j2" %}

{% block styles %}
<link rel="stylesheet" href="{{ url_for('static', filename='results/graphs/graph.css') }}">
{% endblock %}

{% block content %}
{{ breadcrums(["home", "Home"], ["results.index", "Results"], ["results.result", result, {"result": result}], ["results.graphs.base", "Base Graphs", {"result": result}], graph.stem) }}
<h1>Base {{ graph.stem }}</h1>
<a href="#" onclick="fetchGraph(this)" data-endpoint="{{ url_for('results.graphs.base_graph_json', result=result, graph=graph.name) }}">RUN</a>
<div id="display"></div>
<div class="strength-inputs">
    <label>
      Força - Geral:
      <input id="overall-strength" type="range" min="5" max="200" step="1" value="10" onchange="handleStrength()" />
    </label>
    <label>
      Força - Sinônimos:
      <input id="synonym-strength" type="range" min="0" max="3" step="0.1" value="1" onchange="handleStrength()" />
    </label>
    <label>
      Força - Relações:
      <input id="relationship-strength" type="range" min="0" max="2" step="0.1" value="0.2" onchange="handleStrength()" />
    </label>
    <label>
      Variação de Cores:
      <input id="color-variation" type="range" min="0" max="1" step="0.05" value="0" onchange="handleColorVariation()" />
    </label>
  </div>
{% endblock %}

{% block postscripts %}
<script src="https://d3js.org/d3.v7.min.js"></script>
<script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" data-auto-replace-svg="nest"></script>
<script src="{{ url_for('static', filename='results/graphs/colors.js') }}"></script>
<script src="{{ url_for('static', filename='results/graphs/scale.js') }}"></script>
<script src="{{ url_for('static', filename='results/graphs/graph.js') }}"></script>
<script src="{{ url_for('static', filename='results/graphs/navigation.js') }}"></script>
<script src="{{ url_for('static', filename='results/graphs/fetch_graph.js') }}"></script>
{% endblock %}