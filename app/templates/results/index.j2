{% extends "base.j2" %}

{% block styles %}
<link rel="stylesheet" href="{{ url_for('static', filename='results/index.css') }}">
{% endblock %}

{% block content %}
<div class="mt-12 mx-12">
    {{ breadcrums(["home", "Home"], "Results") }}
    <h1 class="text-4xl font-semibold mt-3">Results</h1>
</div>
<ul class="mt-5 overflow-auto">
    {% for result in results %}
    <a href="{{ url_for('.result', result=result.stem) }}" class="text-decoration-none"><li class="border-t p-5 hover:text-blue-500">{{ result.stem }}</li></a>
    {% endfor %}
</ul>
{% endblock %}