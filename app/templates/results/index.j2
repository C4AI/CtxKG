{% extends "base.j2" %}

{% block styles %}
<link rel="stylesheet" href="{{ url_for('static', filename='results/index.css') }}">
{% endblock %}

{% block content %}
<div class="title">
    {{ breadcrums(["home", "Home"], "Results") }}
    <h1>Results</h1>
</div>
<ul class="list-group overflow-auto">
    {% for result in results %}
    <li class="list-group-item"><a href="{{ url_for('.result', result=result.stem) }}" class="text-decoration-none">{{ result.stem }}</a></li>
    {% endfor %}
</ul>
{% endblock %}