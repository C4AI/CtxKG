{% extends "base.j2" %}

{% block content %}
<div class="title">
    {{ breadcrums(["home", "Home"], ["results.index", "Results"], result) }}
    <h1>{{ result }}</h1>
</div>
<div class="d-flex d-flex justify-content-evenly pt-5">
    <a href="{{ url_for('.graphs.base', result=result) }}">
        <div class="btn btn-success p-5">
            <h1>Base</h1>
            <p>Graphs generated by the algorithm, with the synonyms still remaining.</p>
        </div>
    </a>
    <a href="{{ url_for('.graphs.clean', result=result) }}">
        <div class="btn btn-danger p-5">
            <h1>Clean</h1>
            <p>Graphs with synonyms reduced to just the most recurring one.</p>
        </div>
    </a>
</div>
{% endblock %}